<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.rule" id="rule_openacademy_course_responsible">
        <field name="name">OpenAcademy Course Responsible</field>
        <field name="model_id" ref="model_openacademy_course"/>
        <field name="groups" eval="[(4,ref('openacademy.group_openacademy_manager'))]"/>
        <field name="domain_force">[('responsible_id','=',user.id)]</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>
</odoo>
