<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="openacademy_dashboard_board">
        <field name="name">OpenAcademy Dashboard</field>
        <field name="model">board.board</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <board style="1-2">
                    <column>
                        <action name="%(openacademy.openacademy_session_graph_action)d"
                                string="Session graph"/>
                        <action name="%(openacademy.openacademy_session_calendar_action)d"
                                string="Session calendar"/>
                    </column>
                    <column>
                        <action name="%(openacademy.openacademy_course_action_window)d"
                                string="Courses list"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="openacademy_dashboard_action">
        <field name="name">OpenAcademyDashboard Action </field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="openacademy_dashboard_board"/>
    </record>

    <menuitem name="dashboard"
              id="openacademy_dashboard_menu"
              parent="openacademy_menu_root"/>
              action="openacademy_dashboard_action"
              sequence="1"/>

</odoo>
